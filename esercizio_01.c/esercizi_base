/*Chiedi all'utente due numeri interi e stampa la loro somma*/

#include<stdio.h>

int main()
{
    int num_a, num_b, sum;

    printf("\nInserire primo numero intero: ");
    scanf("%d", &num_a);

    printf("\nInserire secondo numero intero: ");
    scanf("%d", &num_b);

    sum=num_a+num_b;
    printf("\nLa somma di %d + %d e': %d\n", num_a, num_b, sum);

    return 0;

}
